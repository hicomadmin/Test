import QtQuick 2.3

Button {
    id: root

    property alias source: image.source
    property alias normalSource: image.normalSource
    property alias pressingSource: image.pressingSource
    property alias checkedNormalSource: image.checkedNormalSource
    property alias checkedPressingSource: image.checkedPressingSource
    property alias disabledSource: image.disabledSource
    property alias focusingSource: image.focusingSource
    property alias image: image

    ButtonStateImage {
        id: image
        anchors.fill: parent
    }
}
